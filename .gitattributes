# Auto detect text files and perform LF normalization
* text=auto

# Force Unix line endings for shell scripts
*.sh eol=lf

# Force Windows line endings for batch files
*.bat eol=crlf
*.ps1 eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.o binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.a binary
*.o binary
