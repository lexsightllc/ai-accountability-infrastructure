# SPDX-License-Identifier: MPL-2.0
# AI Trust Infrastructure - Environment Configuration Template
# Copy to .env for local development overrides
# DO NOT commit .env file with actual secrets to version control

# =============================================================================
# API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
# Development default - MUST be changed for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Trusted Hosts
# Comma-separated list of allowed Host header values
# Protects against host header injection attacks
TRUSTED_HOSTS=localhost,127.0.0.1

# Rate Limiting
# Format: number/timeunit (e.g., "100/minute", "1000/hour")
# Applied to most API endpoints
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_HEALTH=500/minute
RATE_LIMIT_ROOT=200/minute

# =============================================================================
# Database Configuration
# =============================================================================
LOG_DATABASE=transparency-log.db
DATABASE_PATH=./data/aitrust.db

# =============================================================================
# Transparency Log Configuration
# =============================================================================
LOG_ID=default-log
LOG_PUBLIC_URL=http://localhost:8000

# =============================================================================
# Cryptographic Configuration
# =============================================================================

# WARNING: These are example keys for development only
# In production, use proper key management (HSM, KMS, etc.)
# NEVER commit real keys to version control

# Key storage directory
KEY_STORAGE_PATH=./keys

# Key rotation settings (in days)
KEY_ROTATION_INTERVAL=90

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/aitrust.log

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=./logs/audit.log

# =============================================================================
# Monitoring & Observability
# =============================================================================

# OpenTelemetry
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ai-trust-api

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# Witness Service Configuration
# =============================================================================
WITNESS_ENABLED=false
WITNESS_ID=witness-1
WITNESS_POLL_INTERVAL=300
WITNESS_MIN_INTERVAL=60

# =============================================================================
# Development Settings
# =============================================================================

# Debug mode - NEVER enable in production
DEBUG=false

# Hot reload for development
RELOAD=false

# Pretty print JSON responses
JSON_PRETTY_PRINT=true

# =============================================================================
# Production Settings (uncomment and configure for production)
# =============================================================================

# TLS/SSL Configuration
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# Database Encryption
# DATABASE_ENCRYPTION_KEY=use-strong-key-from-kms

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=86400
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/backups

# =============================================================================
# Testing Configuration
# =============================================================================

# Test database (separate from production)
TEST_DATABASE=test-aitrust.db

# Test mode flag
TESTING=false
