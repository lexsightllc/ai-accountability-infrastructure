#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=scripts/lib/common.sh
source "${SCRIPT_DIR}/lib/common.sh"

ensure_venv

E2E_DIR="${PROJECT_ROOT}/tests/e2e"
if [[ ! -d "${E2E_DIR}" ]] || [[ -z "$(find "${E2E_DIR}" -name 'test_*.py' -print -quit)" ]]; then
  _log "No end-to-end tests found; skipping."
  exit 0
fi

PYTEST_CMD=(pytest)
if [[ -n "${PYTEST_E2E_ARGS:-}" ]]; then
  # shellcheck disable=SC2206
  PYTEST_CMD+=(${PYTEST_E2E_ARGS})
else
  PYTEST_CMD+=(-v)
fi
PYTEST_CMD+=("${E2E_DIR}")
PYTEST_CMD+=("$@")

run_cmd "${PYTEST_CMD[@]}"
